      yield return (char) (ch + i); 
  } 
 
  // This iterator returns the specified 
  // range of letters 
  public IEnumerable MyItr(int begin, int end) { 
    for(int i=begin; i < end; i++) 
      yield return (char) (ch + i); 
  } 
} 
 
